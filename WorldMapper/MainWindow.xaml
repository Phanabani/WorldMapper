<Window x:Class="WorldMapper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorldMapper"
        xmlns:sharpGL="clr-namespace:SharpGL.WPF;assembly=SharpGL.WPF"
        mc:Ignorable="d"
        Loaded="MainWindow_OnLoaded"
        AllowsTransparency="True" WindowStyle="None"
        Title="MainWindow" Width="1280" Height="720">
    <Window.Background>
        <SolidColorBrush Opacity="0.0" Color="White"/>
    </Window.Background>
    <Grid Name="myGrid">
        <local:OpenGLOverlayControl
            x:Name="myglctrl"
            OpenGLInitialized="OpenGLControl_OnOpenGLInitialized"
            OpenGLDraw="OpenGLControl_OnOpenGLDraw"
            RenderContextType="FBO"
            FrameRate="60"
            DrawFPS="True" />
    </Grid>
</Window>
